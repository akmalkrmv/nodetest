div(ng-controller="AuthCtrl")
    nav.navbar.navbar-inverse.navbar-fixed-top( role="navigation" )
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") NodeTest
    
        #navbar-inverse.collapse.navbar-collapse
            ul.nav.navbar-nav
                li: a( href="/training" ) Training
                li: a( href="/grammar" ) Grammar
                li.dropdown
                    a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) Administration 
                        span.caret
                    ul.dropdown-menu( role="menu" )
                        li: a( href="/user" ) Users
                        li.divider
                        li: a( href="/language" ) Languages
                        li: a( href="/vocabulary" ) Vocabulary 
                        li: a( href="/word" ) Words
            ul.nav.navbar-nav.navbar-right
                li(ng-if="storage.sessionId == undefined") 
                    a(style="right:100px", href="#" data-toggle="modal" data-target="#authModal") Login
                li(ng-if="storage.sessionId") 
                    a(style="right:100px", href="#", ng-click="logout()") Logout
            
    div#authModal.modal.fade(tabindex="-1" role="dialog" )
        div.modal-dialog.modam-sm(role="document")
            div.modal-content
                div.modal-header  
                    button.close(type="button",data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                div.modal-body
                            div
                                form
                                    div.form-group
                                        label Username:
                                        input.form-control(type="text", ng-model="username")
                                    div.form-group
                                        label Password:
                                        input#email.form-control(type="password", ng-model="password")
                                    div.row(style="text-align:center")
                                        div.col-md-2
                                            input.btn.btn-primary(type="button", value="Sign in", ng-click="login()")

                                